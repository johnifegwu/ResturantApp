<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mickleentityltdnigeria.resturantapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationContextProvider"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon2"
        android:label="@string/app_Title"
        android:roundIcon="@mipmap/app_icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResturantApp">
        <activity android:name=".PrintOrderActivity"/>
        <activity android:name=".ScanQRCodeActivity" />
        <activity android:name=".PaymentActivity"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_Title"
            android:theme="@style/Theme.ResturantApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>